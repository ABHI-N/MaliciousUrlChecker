<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="textBoldLight">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textThinSuperLightColor">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="theme_button">
        <item name="android:background">@drawable/shape_round_theme_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>







</resources>